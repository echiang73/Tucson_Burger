<h1>Welcome to Tucson Burger</h1>

<h2>Place Order Here</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  {{!-- <div class="form-group">
    <label for="pickedup">Pickedup?</label><br>
    <input type="radio" name="pickedup" value="1" checked> Pickedup!<br>
    <input type="radio" name="pickedup" value="0"> NotPickedup
  </div> --}}

  <button type="submit">Place Order</button>
</form>

<h2>Order Up - Pick Up Here</h2>

<ul>
  {{#each burgers}}
    {{#unless pickedup}}
      {{> burgers/burger-block pickedup=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Dine at Table</h2>

<ul>
  {{#each burgers}}
    {{#if pickedup}}
      {{> burgers/burger-block pickedup=false}} {{!-- this line not necessary if not deleting--}}
    {{/if}}
  {{/each}}
</ul>

