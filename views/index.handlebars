<div class="jumbotron">
  <div class="container">
    <div class="row justify-content-sm-center">
      {{!-- <div class="col-sm-auto">
        
      </div> --}}
      <div class="col col-lg-6">
        <img src="assets/images/hot.png" id="pepper-logo" alt="">
        <h1 class="display-4">Tucson Burger</h1>
      </div>
      {{!-- <div class="col-sm-auto">
        
      </div> --}}
    </div>
    <div class="row justify-content-sm-center">
        <p class="lead">Welcome to Old Pueblo's "Hottest" Burger Joint!</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          {{!-- <h5 class="card-title">Card title</h5> --}}
          <h3 class="columnHeader">Place Order Here</h3>

          Order a favorite:
          <ol>
            <li>Old Pueblo Burger</li>
            <li>Tucson Heat Burger</li>
            <li>Wildcat Whopper</li>
            <li>Valley Fever Burger</li>
            <li>Jucy Lucy Burger</li>
          </ol>
          <br>
          Or make your own burger:

          <form class="create-form">

            <div class="form-group">
              <label for="bur">Burger Name:</label>
              <input type="text" id="bur" burger_name="burger_name">
            </div>

            {{!-- <div class="form-group">
              <label for="pickedup">Pickedup?</label><br>
              <input type="radio" name="pickedup" value="1" checked> Pickedup!<br>
              <input type="radio" name="pickedup" value="0"> NotPickedup
            </div> --}}

            <button class="order-burger" type="submit">Place Order</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-4">

      <div class="card">
        <div class="card-body">
          {{!-- <h5 class="card-title">Card title</h5> --}}
          <h3 class="columnHeader">Order Up - Pick Up Here</h3>

          <ul>
            {{#each burgers}}
            {{#unless pickedup}}
            {{> burgers/burger-block pickedup=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>

    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          {{!-- <h5 class="card-title">Card title</h5> --}}
          <h3 class="columnHeader">Dine at Table</h3>

          <ul>
            {{#each burgers}}
            {{#if pickedup}}
            {{> burgers/burger-block pickedup=false}} {{!-- this line not necessary if not deleting--}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>